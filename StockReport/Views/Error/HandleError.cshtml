
@{
    ViewBag.Title = "HandleError";
}

<div class="row">
    <div class="col-md-12">
        <div class="error-template">
            <h1>
                Oops!
            </h1>
            <h2>
                An unexpected error has occurred. Please contact the system administrator.
            </h2>
            <div class="error-details">
                @ViewBag.ErrorMessage
            </div>           
        </div>
    </div>
</div>

